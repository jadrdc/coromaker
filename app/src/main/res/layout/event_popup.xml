<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <DatePicker android:layout_width="362dp" android:layout_height="388dp" android:id="@+id/date_event"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.509" app:layout_constraintHorizontal_bias="0.757">

    </DatePicker>
    <TextView android:textStyle="bold"
              android:text="EVENTO A AGENDAR" android:textSize="18sp"
              android:layout_width="173dp"
              android:layout_height="25dp"
              android:id="@+id/textView3" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toTopOf="@+id/date_event"
              app:layout_constraintVertical_bias="0.117" app:layout_constraintHorizontal_bias="0.117"/>
    <EditText
            android:layout_width="161dp"
            android:layout_height="49dp"
            android:ems="10"
            android:id="@+id/editText3"
            tools:layout_editor_absoluteY="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.965"/>
    <Button
            android:text="Guardar Evento"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.234" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/date_event"/>


</android.support.constraint.ConstraintLayout>